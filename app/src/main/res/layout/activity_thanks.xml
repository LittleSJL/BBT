<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本程序的完成，离不开以下开源项目和书籍的卓越贡献，在此对以下开源项目和书籍作者表示特别感谢 。"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:lineSpacingExtra="3dp"/>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/dark"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gson"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/google/gson"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/square/okhttp"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LitePal"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/LitePalFramework/LitePal"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CircleImageView"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/hdodenhof/CircleImageView"/>


    <TextView
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《第一行代码·第二版》"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="特别感谢此书及作者郭霖，团队Android开发的启蒙书籍"/>
    <View
        android:layout_marginTop="15dp"
        android:background="@color/dark"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

</LinearLayout>
